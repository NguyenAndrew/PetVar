{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "build": "tsc && copyfiles --up 1 --exclude \"src/**/*.ts\" \"src/**/*\" build/src",
    "clean:build": "rimraf build",
    "lint": "npm run lint:fix",
    "lint:check": "eslint src test",
    "lint:fix": "eslint --fix src test",
    "format": "npm run format:fix",
    "format:check": "prettier --list-different src test",
    "format:fix": "prettier --write src test",
    "lormat": "npm run lormat:fix",
    "lormat:check": "npm run lint:check && npm run format:check",
    "lormat:fix": "npm run lint:fix && npm run format:fix",
    "start": "npm run start:cloud:linux",
    "start:cloud:windows": "set NODE_ENV=cloud&& node build/src/server.js",
    "start:cloud:linux": "NODE_ENV=cloud node build/src/server.js",
    "start:cloud:mac": "NODE_ENV=cloud node build/src/server.js",
    "start:local:windows": "set NODE_ENV=local&& nodemon --ignore build/ --ext \"*\" --exec \"npm run build && node build/src/server.js\"",
    "start:local:linux": "NODE_ENV=local nodemon --ignore build/ --ext \"*\" --exec \"npm run build && node build/src/server.js\"",
    "start:local:mac": "NODE_ENV=local nodemon --ignore build/ --ext \"*\" --exec \"npm run build && node build/src/server.js\"",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "dependup": "npm run dependup:upgrade",
    "dependup:check": "ncu",
    "dependup:upgrade": "ncu --doctor -u"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.7.7",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "pocketbase": "^0.21.5",
    "source-map-support": "^0.5.21"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.9.1",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.5.4",
    "@typescript-eslint/eslint-plugin": "^8.4.0",
    "@typescript-eslint/parser": "^8.4.0",
    "copyfiles": "^2.4.1",
    "eslint": "^9.9.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.4",
    "npm-check-updates": "^17.1.1",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.5",
    "typescript": "^5.5.4"
  }
}
